<!--アプリケーションに含まれる全てのテンプレート用レイアウト-->

<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!--ヘッダー-->
<header class="shadow-sm">
  <div class="bg-dark">
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
      <a class="navbar-brand p-2 bg-dark text-white" href="/">Bookers</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
      <% if user_signed_in? %>  <!--ログイン済み-->
        <li class="nav-item">
          <%= link_to "Home", user_path(current_user.id), method: :get %>
          <!--@userどこから来た？-->
        </li>
        <li class="nav-item">
          <%= link_to "Users", users_path, method: :get %>
        </li>
        <li class="nav-item">
          <%= link_to "Books", books_path, method: :get %>
        </li>
        <li class="nav-item">
          <%= link_to "Log out", destroy_user_session_path, method: :delete %>
        </li>
      <% else %>  <!--ログインしていない-->
        <li class="nav-item">
         <%= link_to "Home", root_path, method: :get %>
        </li>
        <li class="nav-item">
          <%= link_to "About", about_path, method: :get %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign up", new_user_registration_path %>
        </li>
        <li class="nav-item">
          <%= link_to "Log in", new_user_session_path %>
        </li>
      <%end%>
     </ul>
      </div>
    </div>
  </nav>
  </div>
</header>
    <%= yield %>
  </body>
</html>
