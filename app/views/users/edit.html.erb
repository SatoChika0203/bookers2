<!--ユーザー編集画面 -->

<div class="container">
  <h1>User info</h1>
        <% if @user.errors.any? %>
             <%= @user.errors.count %>error prohibited this obj from being saved:
          <ul>
             <% @user.errors.full_messages.each do |message| %>
             <li><%= message %></li>
             <% end %>
          </ul>
        <% end %>
        
        <%= form_with model: @user, url:user_path(@user.id), method: :patch do |f| %>
        <div class="form-group">
          <p>Name</p>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <p>Image</p>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        </div>
        <div class="form-group">
          <p>Introduction</p>
          <%= f.text_area :introduction %>
        </div>
          <%= f.submit "Update User", class: "btn btn-secondary" %>
          <% end %>
  </div>
