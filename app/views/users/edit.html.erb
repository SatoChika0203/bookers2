<!--ユーザー編集画面 -->

<h1>Users#edit</h1>
<h1>User info</h1>
<%= form_with model: @user, url:user_path(@user.id), method: :patch do |f| %>
  <label>Name</label>
  <%= f.text_field :name %>
  <label>Image</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  <label>Introduction</label>
  <%= f.text_field :introduction %>
  <%= f.submit "Update User" %>
<% end %>