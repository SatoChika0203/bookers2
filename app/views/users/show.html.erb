<!--ユーザーの詳細画面-->

<%= flash[:notice] %>

<div class="container">
<div class="row"> 

 <div class="col-md-3">
<%= render 'books/show', user: @user, newBook: @newBook %>
 </div>

<div class="col-md-8 offset-md-1">
 <h1>Books</h1> 
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= nil %></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>

  <tbody>
   <% @book.each do |books| %>
  <tr>
    <td><%= link_to (image_tag books.user.get_profile_image(100,100)), user_path(books.user.id) %></td>
    <td><%= link_to books.title, book_path(books.id) %></td>
    <td><%= books.body %></td>
  </tr>
   <%end%>
  </tbody>
</table>
</div>
</div>
</div>


