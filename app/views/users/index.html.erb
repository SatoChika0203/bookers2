<!--ユーザーの一覧画面-->

<div class="container">
<div class="row"> 

 <div class="col-lg-4">
<%= render 'books/index', newBook: @newBook %>
 </div>

<div class="col-lg-8"> 
<h1>Users</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
    </tr>
  </thead>
  
  <tbody>
   <% @users.each do |users| %>
  <tr>
    <td><%= image_tag users.get_profile_image(100,100) %></td>
    <td><%= users.name %></td>
    <td><%= link_to "Show", user_path(users.id) %></td>
  </tr>
   <%end%>
  </tbody>
</table>
</div>
</div>
</div>

