<!--Booksの一覧ページ-->

<h1>Books#index</h1>

<% if @newBook.errors.any? %>
  <%= @newBook.errors.count %>件のエラーが発生しました
  <ul>
    <% @newBook.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
<div class="row"> 

 <div class="col-lg-4">
  <%= render 'index', newBook: @newBook %>
 </div>


 <div class="col-lg-8"> 
 <h1>Books</h1>
 <table class="table table-striped">
  <thead>
    <tr>
      <th><%= nil %></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  
  <tbody>
    <% @books.each do |books| %>
    <tr>
      <td><%= image_tag books.get_profile_image(100,100) %></td>
      <td><%= link_to books.title, book_path(books.id) %></td>
      <td><%= books.body %></td>
    </tr>
    <%end%>
  </tbody>
</table>
</div>
</div>
</div>
