<!--Books編集画面-->
<h1>Books#edit</h1>

<div class="container">
<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url:book_path, method: :patch do |f| %>
 <div class="form-group">
  <p>Title</p>
  <%= f.text_field :title %>
 </div>
 <div class="form-group">
  <pl>Opinion</p>
  <%= f.text_area :body %>
  </div>
  <%= f.submit "Update Book" %>
<% end %>

<%= link_to "Show", book_path(@book.id) %>
<span>|</span>
<%= link_to "Edit", books_path %>
</div>