<!--一覧画面の部分テンプレートの-->

<h1>User info</h1>
<%= image_tag current_user.get_profile_image(100,100) %>
<table class="table table-striped">
  <tbody>
     <tr class="bg-transparent"><th>name</th><th><%= current_user.name %></th></tr>
     <tr class="bg-transparent"><th>introduction</th><th><%= current_user.introduction %></th></tr>
  </tbody>
 </table> 
 
 
<%= link_to edit_user_path(current_user.id), method: :get do%>
<button type="button" class="btn btn-outline-secondary"><i class="fas fa-user-cog"></i></button>
<% end %>

<h1>New book</h1>
<%= form_with model: @newBook, url:books_path, method: :post do |f| %>
 <div class="form-group">
 <p>Title</p>
 <%= f.text_field :title %>
 </div>
 <div class="form-group">
 <p>Opinion</p>
 <%= f.text_area :body %>
 </div>
 <%= f.submit 'Create Book', class: "btn btn-success" %>
<%end%>
